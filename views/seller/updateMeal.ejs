<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="/styles.css">
<%- include('../partials/sellerHeader', { sellerName: sellerName }) %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <form action="/update-meal" method="post" enctype="multipart/form-data" class="col-lg-4 col-md-6 col-sm-8">
    <h2 class="h3 mb-4 fw-normal text-center">Update Meal</h2>
    
    <input type="hidden" name="id" value="<%= meal.id %>">

    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="name" name="name" value="<%= meal.name %>" required>
      <label for="name">Meal Name:</label>
    </div>

    <div class="form-floating mb-3">
      <input type="number" step="0.01" class="form-control" id="price" name="price" value="<%= meal.price %>" required>
      <label for="price">Price:</label>
    </div>

    <div class="form-floating mb-3">
      <textarea class="form-control" id="contents" name="contents" required><%= meal.contents %></textarea>
      <label for="contents">Contents:</label>
    </div>

    <div class="form-floating mb-3">
      <input type="time" class="form-control" id="prep_time" name="prep_time" value="<%= meal.prep_time %>" required>
      <label for="prep_time">Preparation Time:</label>
    </div>

    <div class="mb-3">
      <label for="meal_image" class="form-label">Meal Image:</label>
      <input type="file" class="form-control" id="meal_image" name="meal_image">
    </div>

    <% if (meal.image_url) { %>
      <div class="mb-3">
        <p>Current Image:</p>
        <img src="<%= meal.image_url %>" alt="<%= meal.name %>" width="100">
      </div>
    <% } %>

    <button class="btn btn-primary w-100 py-2" type="submit">Update Meal</button>
  </form>
</div>

<%- include('../partials/footer') %>
