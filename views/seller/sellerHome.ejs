<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="/styles.css">
<%- include('../partials/sellerHeader', { sellerName: sellerName }) %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <form action="/add-meal" method="post" enctype="multipart/form-data" class="col-lg-4 col-md-6 col-sm-8">
    <% if (message) { %>
      <div class="message error text-danger mb-3"><%= message %></div>
    <% } %>
    
    <h2 class="h3 mb-4 fw-normal text-center">Add New Meal</h2>

    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="name" name="name" required>
      <label for="name">Meal Name:</label>
    </div>

    <div class="form-floating mb-3">
      <input type="number" step="0.01" class="form-control" id="price" name="price" required>
      <label for="price">Price:</label>
    </div>

    <div class="form-floating mb-3">
      <textarea class="form-control" id="contents" name="contents" required></textarea>
      <label for="contents">Contents:</label>
    </div>

    <div class="form-floating mb-3">
      <input type="time" class="form-control" id="prep_time" name="prep_time" required>
      <label for="prep_time">Preparation Time:</label>
    </div>

    <div class="mb-3">
      <label for="meal_image" class="form-label">Upload Meal Image:</label>
      <input type="file" class="form-control" id="meal_image" name="meal_image" accept="image/*" required>
    </div>

    <!-- Monthly Meal Option -->
    <div class="mb-3">
      <label class="form-label">Is this a Monthly Meal Plan?</label>
      <div class="form-check">
        <input type="radio" id="isMonthlyYes" name="isMonthly" value="yes" class="form-check-input" required>
        <label for="isMonthlyYes" class="form-check-label">Yes</label>
      </div>
      <div class="form-check">
        <input type="radio" id="isMonthlyNo" name="isMonthly" value="no" class="form-check-input" required>
        <label for="isMonthlyNo" class="form-check-label">No</label>
      </div>
    </div>

    <button class="btn btn-primary w-100 py-2" type="submit">Add Meal</button>
  </form>
</div>

<%- include('../partials/footer') %>
