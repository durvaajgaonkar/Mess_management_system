<%- include('../partials/customerHeader', { customerName: customerName }) %>
<div class="container">
  <h2>Refer a Friend</h2>
  <p>Share the link below to refer a friend. You and they get a coupon for a discount on the next order!</p>
  
  <div class="input-group mb-3">
    <input type="text" id="referralLink" class="form-control" value="<%= referralLink %>" readonly>
    <button class="btn btn-primary" onclick="copyReferralLink()">Copy Link</button>
  </div>

  <div class="text-center">
    <h4>Earn Coupons for Referrals!</h4>
    <p>For every friend that joins using your link, you and they get a coupon for a discount on the next order!</p>
  </div>
</div>

<script>
function copyReferralLink() {
  const referralLink = document.getElementById('referralLink');
  referralLink.select();
  document.execCommand('copy');
  alert('Referral link copied to clipboard!');
}
</script>
